{% extends "layout.njk" %}

{% block head %}
    <title> Gymuscles | Novo instrutor </title>
{% endblock %}

{% block content %}
<div class="cards">
    <div class="logo_in_site">
        <a href="/">
            <img src="./images/Logo_in_site.jpg">
        </a>
    </div> 
    <div class="container">
        
        <form>
            <section class="avatar" style="background: url({{instructor.avatar_url}}) no-repeat center center / cover">
            
            </section>
            <section class="details">

                <h3>Detalhes dos Instrutor</h3>

            

                <div class="box">
                    <div>Nome</div>
                    <div>{{instructor.name}}</div>
                </div>

                <div class="box">
                    <div>Idade</div>
                    <div>{{instructor.age}}</div>
                </div>

                <div class="box">
                    <div>Sexo</div>
                    <div>{{'Masculino' if instructor.gender == "M" else 'Feminino'}}</div>
                </div>

                <div class="box">
                    <div>Áreas de atuação</div>
                    <div>{{instructor.services}}</div>
                </div>
               
               <div class="box">
                    <div>Data de criação</div>
                    <div>{{instructor.created_at}}</div>
                </div>

                <a class="button" href="">Editar</a>
            </section>
        </form>
    </div>
</div>
{% endblock %}